<% include ../partials/head %>
<%var tab = "Dogs" %>
<% include ../partials/header %>
<div class = "listbg">
  <div class = "container searchForm">
    <h3 class="display-3 displayText bigtext">Search for a Dog</h3>      
    <form class = "">
          <div class="form-group">
              <label>Name</label>
              <input type="text" class="form-control" name="name">
          </div>
          <div class="form-group">
              <label>Breed</label>
              <input type="text" class="form-control" name="breed">
          </div>
          <div class="form-group">
              <label for="sel1">Order</label>
              <select class="form-control" id="sel1">
                <option>Alphabetically</option>                  
                <option>Number of Favorites</option>
                <option>Number of Comments</option>
              </select>
            </div>
      </form>
  </div>
  <div class="container-fluid bigtext">
  	<h2 class="display-2 displayText">Click on any dog to learn more</h2>
  </div>

  <div class = "centeredBoxes" >
    <% dogs.forEach(function(dog) { %>

      <%# Linking using the div this way wont work without html 5!! %>

      <a href = "/dogs/<%= dog.dogID %>">
      <div class = "box bg-primary">
        <img src = "/images/<%= dog.name %>/profile.jpg" class = "profileImage rounded-circle ">

        <h5 class = "display-5"><a class = "dognamelink" href="/dogs/<%= dog.dogID %>"><%= dog.name %></a> </h5>
        <%# getting the breeds %>
        <% if (dog.breed2 == null) { %>
          <p> <%= dog.breed1 %> </p>
        <% } else { %>
          <p> <%= dog.breed1 %> <br /><%= dog.breed2 %> </p>
        <% } %>
        <p><span class = "fa fa-heart selectedHeart fa-2x"></span>  <%= dog.favorites %></p>
        <p><span class = "fa fa-comment fa-2x"></span>  <%= dog.comments %></p>

      </div>
      </a>
    <% }); %>

  </div>
</div>
<% include ../partials/footer %>
